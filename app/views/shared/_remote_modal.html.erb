<%= turbo_frame_tag "remote_modal" do %>

    <!-- Modal -->
    <div class="modal fade modal-dialog-scrollable" id="<%= modal_class %>" tabindex="-1" aria-labelledby="<%= modal_class %>Label" aria-hidden="true" data-controller="remote-modal" data-action="turbo:before-render@document->remote-modal#hideBeforeRender">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="<%= modal_class %>Label"><%= modal_title %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body remote_modal_body" id="remote_modal_body">
                    <%= yield %>
                </div>
            </div>
        </div>
    </div>

<% end %>